<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
        android:text="@string/detail_header_title" />

    <TextView
        android:id="@+id/headerMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:paddingTop="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/playButton"
            style="@style/Widget.Material3.Button.ElevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_play" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/pauseButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/detail_pause" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/exportButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/detail_export_json" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardElevation="2dp"
        app:strokeColor="@android:color/darker_gray"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/summaryTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:text="@string/summary_section_title" />

            <TextView
                android:id="@+id/summaryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_header_no_summary"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:paddingTop="4dp" />

            <LinearLayout
                android:id="@+id/summaryContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/summaryContextLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_header_context"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/summaryContext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/summaryBulletsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/detail_header_bullets"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/summaryBullets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/summaryTopicsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_topics_label"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/summaryTopics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                <TextView
                    android:id="@+id/summaryKeywordsLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/summary_keywords_label"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                    android:paddingTop="4dp" />

                <TextView
                    android:id="@+id/summaryKeywords"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/segmentsLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/segments_header"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:paddingTop="16dp"
        android:paddingStart="4dp" />

</LinearLayout>
